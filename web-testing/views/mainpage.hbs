<!doctype html>
<html lang="en">
  <head>
    
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    
  </head>

  <body  class="">
    

      <div style="display: block;" class="d-block d-flex justify-content-center" >

        <form id="form" action="/" method="POST" style="width: fit-content;" class="d-sm-inline-block">

        
           
             <label for="chooseEvent">Choose an event:</label>
            <select style="display: block;" id="chooseEvent" name="" >
              <option selected="selected">Please select... </option>
            <option value="goToPage">Go to page</option>
            <option value="formInput">Select and fill an input area</option>
            <option value="click">Click button</option>
            <option value="screenshot">Take a screenshot</option>
            <option value="getValue">Get value</option>
            </select>   
            <input type="hidden" name="selected" value="" id="selected">

            <input  type="text" style="width: 100%; margin-top: 20px ; height:50px"  name="formInput" id="formInput">

            <input  type="text" style="width: 100%; margin-top: 20px ; height:50px; display:none"  name="enterFormValue" id="enterFormValue">
            
            <button type="submit" style="margin-top : 20px">Add event</button>
            
        </form>

    <table class="table table-striped d-sm-inline-block align-top" style="width: fit-content; padding-left:50px">
    <thead>
      <tr>
        
        <th scope="col">Event</th>
        <th scope="col">Input</th>
        
       
      </tr>
    </thead>

    <tbody>
     {{#each eventsList}}

    <tr>
        <td>{{this.action}} </td>
        <td> {{this.formInput}}</td>
      
    </tr>
  
      {{/each}}

    </tbody>

  </table>

 <table class="table table-striped d-sm-inline-block align-top" style="width: fit-content; padding-left:50px">
    <thead>
      <tr>
        
        <th scope="col">Received Values</th>
     
      </tr>
    </thead>
  <tbody>
     {{#each scrappedValues}}

    <tr>
        <td>{{this}} </td>
        
    </tr>

      {{/each}}
      
    </tbody>

  </table>

  </div>

   <div class="d-inline-block d-flex justify-content-center" style="padding-top:100px ; padding-left:10px">
     
       <a style="font-size: 40px;margin-left : 60px" href="/startTest">Start Test</a>
        <a style="font-size: 40px;margin : 60px" href="/cleanTest">Clean Test</a>
   </div>


  <div class="d-inline-block d-flex justify-content-center"><p>(Not working)Test result= {{isTestSucceed}}</p></div>

<script>

const a = []
var e = document.getElementById("chooseEvent")

e.onchange = function(){

    
    var formInput = document.getElementById("formInput")
    let value = e.value;
    formInput.style.display = "block";
    enterFormValue.style.display = "none";
    if (value === "goToPage") {
        
      formInput.placeholder = "Enter page URL here"
        
    } 
     if (value === "formInput") {
        formInput.placeholder = "Type CSS selectors of input";
        enterFormValue.style.display = "block";

        enterFormValue.placeholder = "Type the input";

    } 

    if (value === "getValue") {
        formInput.placeholder = "Type selectors of the value";
        
    } 
    if (value === "click") {

        
        formInput.placeholder = "Type CSS selectors of button"
        
    } 
    
    if (value === "screenshot") {

        formInput.style.display = "none"
        
    } 

    var selected = document.getElementById("selected");
    selected.value = value;
}


</script>

   
  </body>
</html>